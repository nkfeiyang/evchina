<h1>登录</h1>

<% form_for @user_session, :url => user_session_path do |f| %>
  <%= f.error_messages %>
  <%= f.label :login, "帐号" %><br />
  <%= f.text_field :login %><br />
  <br />
  <%= f.label :password, "密码" %><br />
  <%= f.password_field :password %><br />
  <br />
  <%= f.check_box :remember_me %><%= f.label :remember_me, "下次自动登录" %><br />
  <br />
  <%= f.submit "提交" %>
<% end %>
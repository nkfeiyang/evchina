<% flash.each do |key, value| %>
			<div class="flash <%= key %>"><%= value %></div>
		<% end %>
<div class="full_login fcenter">
	<div id="prompt1" class="login_prompt clear" style="display:none;">
		<p>您需要登录后才能继续浏览或操作！</p>
	</div>
	<div id="prompt2" class="login_prompt clear" style="display:none;">
		<p>密码不对！请检查“Caps Lock”或“Num Lock”键。</p>
	</div>
	<div class="full_login_panel clear">
        <% form_for @user_session, :url => user_session_path do |f| %>
        <h2>用户登录</h2>	
		
		
        <p>
            <%= f.label :login, "帐号:", :class=>"login_label" %>
            <%= f.text_field :login, :class=>"login-text" %>
        </p>
        <p>
	        <%= f.label :password, "密码:", :class=>"login_label" %>
	        <%= f.password_field :password, :class=>"login-text" %>
	    </p>
	    <p>
	        <span><a href="/findpass" tabindex="5" class="login_link">取回密码</a></span>	        
	        <%= f.check_box :remember_me, :class=>"input-checkbox" %><%= f.label :remember_me, "下次自动登录", :class=>'login_cbx_label' %>
	    </p>
	    <p>
	        <%= f.submit "登录", :class=>"login_button login-submit" %>
	    </p>
	    <p>
	          还没有开通你的帐号？ <%= link_to "立即注册", signup_url, :class=>"login_link" %>
	    </p>
   	    <% end %>
		<% form_tag("/user_sessions/create") do %>
		<%= text_field_tag "user_session[login]", "", :size => 50 %>
		<%= text_field_tag "user_session[password]", "", :size => 50 %>
		<%= submit_tag("login") %>

		<% end %>
	</div>
</div>

